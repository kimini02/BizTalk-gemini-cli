{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/app.py"
    },
    {
      "source": "/css/(.*)",
      "destination": "frontend/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "frontend/js/$1"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/index.html"
    }
  ]
}